<div class="mt-4 lg-4 container-fluid">
  <h2>Danh sách người dùng</h2>

  <div class="row">
    {{#each members}}
      <div class="col-sm-3">
        <div class="card card-course-item">
          <a href="/members/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.name}}"
            />
          </a>
          <div class="card-body">
            <a href="/members/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Xem chi tiết</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>