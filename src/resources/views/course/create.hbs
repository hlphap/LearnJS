<div class="mt-4 container-fluid">
  <h3>Đăng ký khóa Học</h3>
  <form method="post" action="/courses/">
    <div class="form-group">
      <label for="name" class="form-label">Tên khóa học</label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>

    <div class="form-group">
      <label for="description" class="form-label">Mô tả khóa học</label>
      <input type="text" class="form-control" id="description" name="description" />
    </div>

    <div class="form-group">
      <label for="videoId" class="form-label">URL Video</label>
      <input type="text" class="form-control" id="videoId" name="videoId" />
    </div>

    <div class="form-group">
      <label for="level" class="form-label">Trình độ</label>
      <input type="text" class="form-control" id="level" name="level" />
    </div>
    <button type="submit" class="btn btn-primary mt-4">Thêm khóa học</button>
  </form>
</div>